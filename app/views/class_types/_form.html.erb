<%= form_with(model: class_type) do |form| %>
  <% if class_type.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(class_type.errors.count, "error") %> prohibited this class_type from being saved:</h2>

      <ul>
        <% class_type.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <%= form.text_field :title, {class:"form-control-lg", placeholder:"Class title"} %>
      </div>

      <div class="mb-3">
        <%= form.number_field :block_count, {class:"form-control-sm", placeholder:"Workout block count"} %>
      </div>
      
      <div class="mb-3">
        <%= form.text_area :instruction, {class:"form-control", placeholder:"Instructions for this class. Need to write out how we want to instruct how to make these instructions lol", rows: "3"} %>
      </div>

      <div class="">
        <%= form.collection_select :video_id, Video.all, :id, :name %>
      </div>
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>